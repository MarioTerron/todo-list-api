# editorconfig.org
root = true

[*]
indent_style = tab
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# HTML files
[*.html]
indent_size = 4

#  CSS & SCSS files
[*.{css,scss}]
indent_size = 2

# PUG files
[*.pug]
indent_size = 2

# JS files
[*.js]
indent_size = 2
